---
import InfoLayout from '../layouts/InfoLayout.astro';
import Navigation from '../components/Navigation.tsx';
import profilePic from '../assets/Arturo-Profile-Pic.jpg';
import uicLogo from '../assets/University_of_Illinois_at_Chicago_circle_logo.svg';
import politecnicoLogo from '../assets/Politecnico_di_Torino_-_Logo.svg';
---

<InfoLayout title="About Arturo Cardone - Software Engineer & AI Specialist" description="Learn about Arturo Cardone's background, education at Politecnico di Torino and University of Illinois Chicago, and passion for building AI-powered solutions and scalable systems.">
    <div class="p-3 sm:p-4 sm:pt-8 sm:px-12 pb-12 sm:pb-20 min-h-dvh flex flex-col gap-8 sm:gap-16 max-w-6xl mx-auto w-full">
        <Navigation client:load />

        <div class="flex-1 flex flex-col justify-center">
            <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-gray-100 mb-6 sm:mb-8 md:mb-10">About Me.</h1>

            <div class="space-y-8">
                <div class="prose prose-invert max-w-none">
                    <p class="text-sm sm:text-base md:text-lg lg:text-xl text-zinc-300 leading-relaxed mb-3 sm:mb-4 md:mb-6">
                        I am a Software Engineer based in Chicago, IL with experience in distributed systems, AWS infrastructure, GenAI and Android. I'm passionate about building scalable, high-impact systems using cutting-edge technologies. I am currently working at Amazon.com to drive efficiency in the Advertising organization.
                    </p>
                </div>

                <!-- Profile Picture -->
                <div class="flex justify-center mb-8">
                    <div class="relative">
                        <div class="w-52 h-52 sm:w-60 sm:h-60 md:w-72 md:h-72 rounded-full overflow-hidden border-4 border-zinc-600 shadow-2xl">
                            <img
                                src={profilePic.src}
                                alt="Arturo Cardone - Software Engineer"
                                class="w-full h-full object-cover"
                                loading="lazy"
                            />
                        </div>
                        <div class="absolute inset-0 rounded-full bg-gradient-to-t from-black/20 to-transparent"></div>
                    </div>
                </div>

                <!-- Education and My Approach Side by Side -->
                <div class="grid md:grid-cols-2 gap-6 sm:gap-8 text-center md:text-left px-4 sm:px-0">
                    <!-- Education Section -->
                    <div class="space-y-4">
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200">Education</h2>

                        <div class="space-y-4">
                            <!-- UIC Masters -->
                            <div class="flex items-start gap-4 p-4 bg-gray-200 rounded-lg border border-gray-400">
                                <div class="flex-shrink-0 opacity-60 hover:opacity-100 transition-opacity duration-300">
                                    <a href="https://www.uic.edu/" target="_blank" rel="noopener noreferrer">
                                        <img src={uicLogo.src} alt="University of Illinois at Chicago" class="h-10 w-auto" />
                                    </a>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-base font-semibold text-gray-900 mb-1">Master of Science - MS, Computer Science</h3>
                                    <p class="text-gray-600 text-xs mb-1">University of Illinois at Chicago</p>
                                    <p class="text-gray-600 text-xs">Jan 2018 – Dec 2019 • GPA: 4.0</p>
                                </div>
                            </div>

                            <!-- Polytechnic Turin Masters -->
                            <div class="flex items-start gap-4 p-4 bg-gray-200 rounded-lg border border-gray-400">
                                <div class="flex-shrink-0 opacity-60 hover:opacity-100 transition-opacity duration-300">
                                    <a href="https://www.polito.it/en" target="_blank" rel="noopener noreferrer">
                                        <img src={politecnicoLogo.src} alt="Polytechnic University of Turin" class="h-10 w-auto" />
                                    </a>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-base font-semibold text-gray-900 mb-1">Master of Science - MS, Computer Engineering</h3>
                                    <p class="text-gray-600 text-xs mb-1">Polytechnic University of Turin, Italy</p>
                                    <p class="text-gray-600 text-xs">Sep 2017 – Dec 2019 • GPA: 4.0</p>
                                </div>
                            </div>

                            <!-- Politecnico di Torino Bachelors -->
                            <div class="flex items-start gap-4 p-4 bg-gray-200 rounded-lg border border-gray-400">
                                <div class="flex-shrink-0 opacity-60 hover:opacity-100 transition-opacity duration-300">
                                    <a href="https://www.polito.it/en" target="_blank" rel="noopener noreferrer">
                                        <img src={politecnicoLogo.src} alt="Politecnico di Torino" class="h-10 w-auto" />
                                    </a>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-base font-semibold text-gray-900 mb-1">Bachelor's degree, Computer Engineering</h3>
                                    <p class="text-gray-600 text-xs mb-1">Polytechnic University of Turin, Italy</p>
                                    <p class="text-gray-600 text-xs">Sep 2014 – Sep 2017 • GPA: 3.8</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- My Approach -->
                    <div class="space-y-4">
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200">My Approach</h2>

                        <div class="space-y-2 text-zinc-300 text-sm">
                            <p>
                                I believe in writing clean, maintainable code that scales. My experience at Amazon has taught me the importance of building systems that can handle massive scale while remaining reliable and cost-effective.
                            </p>

                            <p>
                                I'm passionate about using technology to solve real-world problems, whether that's optimizing delivery routes to save millions or creating AI tools that boost developer productivity.
                            </p>

                            <p>
                                When I'm not coding, you'll find me exploring new technologies, contributing to open source projects, or mentoring junior developers.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- What I Do and Quick Facts Side by Side -->
                <div class="grid md:grid-cols-2 gap-6 sm:gap-8 text-center md:text-left px-4 sm:px-0">
                    <!-- What I Do -->
                    <div class="space-y-4">
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200">What I Do</h2>

                        <div class="space-y-3">
                            <div class="p-3 sm:p-4 bg-zinc-900/50 rounded-lg border border-zinc-800">
                                <h3 class="text-base sm:text-lg font-medium text-zinc-200 mb-2">AWS & Distributed Systems</h3>
                                <p class="text-zinc-400 text-sm">Design and implement scalable distributed systems using AWS services and microservices architecture.</p>
                            </div>

                            <div class="p-3 sm:p-4 bg-zinc-900/50 rounded-lg border border-zinc-800">
                                <h3 class="text-base sm:text-lg font-medium text-zinc-200 mb-2">Generative AI</h3>
                                <p class="text-zinc-400 text-sm">Build generative AI applications using Amazon Bedrock, LangChain, and modern LLM frameworks.</p>
                            </div>

                            <div class="p-3 sm:p-4 bg-zinc-900/50 rounded-lg border border-zinc-800">
                                <h3 class="text-base sm:text-lg font-medium text-zinc-200 mb-2">Android Development</h3>
                                <p class="text-zinc-400 text-sm">Create high-performance Android applications supporting millions of daily interactions.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Facts -->
                    <div class="space-y-4 text-left">
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200">Quick Facts</h2>

                        <div class="space-y-3">
                            <ul class="space-y-3 text-zinc-300 text-sm">
                                <li class="flex items-start">
                                    <span class="text-zinc-500 mr-2 mt-0.5 flex-shrink-0">•</span>
                                    <span>Based in Chicago, IL</span>
                                </li>
                                <li class="flex items-start">
                                    <span class="text-zinc-500 mr-2 mt-0.5 flex-shrink-0">•</span>
                                    <span>Spent 3 years in Seattle, WA working at Amazon HQ</span>
                                </li>
                                <li class="flex items-start">
                                    <span class="text-zinc-500 mr-2 mt-0.5 flex-shrink-0">•</span>
                                    <span>Double Master's degrees from UIC and Politecnico di Torino</span>
                                </li>
                                <li class="flex items-start">
                                    <span class="text-zinc-500 mr-2 mt-0.5 flex-shrink-0">•</span>
                                    <span>Spent years developing Android apps as a personal passion</span>
                                </li>
                                <li class="flex items-start">
                                    <span class="text-zinc-500 mr-2 mt-0.5 flex-shrink-0">•</span>
                                    <span>Now enjoying building Generative AI solutions</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="mt-16 pt-8 border-t border-zinc-800">
                    <div class="text-center">
                        <h2 class="text-2xl font-semibold text-zinc-200 mb-4">Ready to Build Something Amazing?</h2>
                        <p class="text-zinc-400 mb-6">
                            I'm always excited to take on new challenges and contribute to innovative projects.
                        </p>
                        <a
                            href="/contact"
                            class="inline-block px-8 py-3 bg-zinc-700 hover:bg-zinc-600 text-zinc-100 rounded-lg transition-colors duration-200 font-medium"
                        >
                            Let's Connect
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</InfoLayout>