---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.tsx';
import WarpBackground from '../components/WarpBackground.tsx';
---

<Layout title="Arturo Cardone - Software Engineer" description="Building scalable systems and AI-powered solutions. 5+ years of experience in distributed systems, AWS infrastructure, and Android development.">
	<!-- Full-screen background for homepage -->
	<div class="fixed inset-0 -z-20 overflow-hidden">
		<WarpBackground
			color1="#000000"
			color2="#1a1a1a"
			color3="#404040"
			color4="#666666"
			speed={0.25}
			swirl={2.2}
			swirlIterations={15}
			shapeScale={0.4}
			rotation={0.8}
			client:load
		/>
	</div>

	<!-- Full-screen background for homepage -->
	<div class="fixed inset-0 -z-20 overflow-hidden">
		<WarpBackground
			color1="#000000"
			color2="#1a1a1a"
			color3="#404040"
			color4="#666666"
			speed={0.25}
			swirl={2.2}
			swirlIterations={15}
			shapeScale={0.4}
			rotation={0.8}
			client:load
		/>
	</div>

	<div class="relative z-10 p-3 sm:p-4 sm:pt-8 sm:px-12 pb-12 sm:pb-20 min-h-dvh flex flex-col gap-8 sm:gap-16 max-w-6xl mx-auto w-full">
		<Navigation client:load />

        <div class="flex-1 flex flex-col justify-center">
            <div class="space-y-4 sm:space-y-6 sm:space-y-8 text-center w-full px-2 sm:px-0">
            <h1 class="text-4xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-bold text-zinc-50 leading-tight mx-auto">
                Arturo Cardone
            </h1>

            <p class="text-base sm:text-lg md:text-xl xl:text-2xl text-zinc-400 font-medium mx-auto">
                Software Engineer.
            </p>

            <p class="text-sm sm:text-base md:text-lg xl:text-xl text-zinc-500 text-balance max-w-2xl mx-auto leading-relaxed px-4 sm:px-0">
                Specializing in AWS infrastructure, Generative AI solutions, and distributed systems. Background in Android development.
            </p>

            <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 justify-center items-center mt-4 sm:mt-8 px-4 sm:px-0">
                <a
                    href="/experience"
                    class="w-full sm:w-auto px-6 sm:px-8 py-3 bg-zinc-700 hover:bg-zinc-600 text-zinc-100 rounded-lg transition-colors duration-200 font-medium text-center text-sm sm:text-base"
                >
                    View My Experience
                </a>
                <a
                    href="/contact"
                    class="w-full sm:w-auto px-6 sm:px-8 py-3 border border-zinc-600 hover:border-zinc-500 text-zinc-300 hover:text-zinc-200 rounded-lg transition-colors duration-200 font-medium text-center text-sm sm:text-base"
                >
                    Get In Touch
                </a>
            </div>
        </div>

        </div>
    </div>
</Layout>
