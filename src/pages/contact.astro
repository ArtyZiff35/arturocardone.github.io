---
import InfoLayout from '../layouts/InfoLayout.astro';
import Navigation from '../components/Navigation.tsx';
---

<InfoLayout>
    <div class="p-3 sm:p-4 sm:pt-8 sm:px-12 pb-12 sm:pb-20 min-h-dvh flex flex-col gap-8 sm:gap-16 max-w-6xl mx-auto w-full">
        <Navigation client:load />

        <div class="flex-1 flex flex-col justify-center">
            <div class="max-w-4xl mx-auto">
            <h1 class="text-2xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-gray-100 mb-6 sm:mb-8 md:mb-10">Get In Touch.</h1>

            <div class="grid md:grid-cols-2 gap-12">
                <!-- Contact Information -->
                <div class="space-y-8">
                    <div>
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200 mb-4 sm:mb-6">Contact Information</h2>

                        <div class="space-y-6">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-zinc-800 rounded-lg flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-300">
                                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-zinc-400 text-sm">Location</p>
                                    <p class="text-zinc-200">Chicago, IL</p>
                                </div>
                            </div>

                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-zinc-800 rounded-lg flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-300">
                                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                                        <rect width="4" height="12" x="2" y="9"></rect>
                                        <circle cx="4" cy="4" r="2"></circle>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-zinc-400 text-sm">LinkedIn</p>
                                    <a href="https://linkedin.com/in/arturo-cardone" class="text-zinc-200 hover:text-zinc-100 transition-colors">linkedin.com/in/arturo-cardone</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Call to Action -->
                    <div class="p-6 bg-zinc-900/50 rounded-lg border border-zinc-800">
                        <h3 class="text-lg font-medium text-zinc-200 mb-3">Let's Connect</h3>
                        <p class="text-zinc-400 mb-4">
                            I'm always interested in discussing new opportunities, whether it's about joining your team, collaborating on exciting projects, or just having a conversation about technology and innovation.
                        </p>
                        <p class="text-zinc-400">
                            Feel free to connect with me. I'm always interested in discussing new opportunities and interesting projects.
                        </p>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="space-y-8">
                    <div>
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200 mb-4 sm:mb-6">What I'm Looking For</h2>

                        <div class="space-y-4">
                            <div class="p-4 bg-zinc-900/50 rounded-lg border border-zinc-800">
                                <h3 class="text-lg font-medium text-zinc-200 mb-2">Senior Engineering Roles</h3>
                                <p class="text-zinc-400 text-sm">Staff Engineer, Senior Software Engineer, Principal Engineer positions at innovative tech companies.</p>
                            </div>

                            <div class="p-4 bg-zinc-900/50 rounded-lg border border-zinc-800">
                                <h3 class="text-lg font-medium text-zinc-200 mb-2">Technical Leadership</h3>
                                <p class="text-zinc-400 text-sm">Engineering management, architecture, or technical program management opportunities.</p>
                            </div>

                            <div class="p-4 bg-zinc-900/50 rounded-lg border border-zinc-800">
                                <h3 class="text-lg font-medium text-zinc-200 mb-2">AI/ML Focused Roles</h3>
                                <p class="text-zinc-400 text-sm">Positions involving generative AI, machine learning engineering, or AI product development.</p>
                            </div>

                            <div class="p-4 bg-zinc-900/50 rounded-lg border border-zinc-800">
                                <h3 class="text-lg font-medium text-zinc-200 mb-2">Remote or Hybrid</h3>
                                <p class="text-zinc-400 text-sm">Open to remote work or hybrid arrangements in the Chicago area or other major tech hubs.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Availability -->
                    <div class="p-6 bg-zinc-900/50 rounded-lg border border-zinc-800">
                        <h3 class="text-lg font-medium text-zinc-200 mb-3">Current Availability</h3>
                        <div class="flex items-center space-x-3">
                            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                            <span class="text-zinc-300">Actively seeking new opportunities</span>
                        </div>
                        <p class="text-zinc-400 text-sm mt-2">
                            Open to discussions about full-time positions starting in early 2026 or later.
                        </p>
                    </div>

                    <!-- Resume Download -->
                    <div class="text-center">
                        <h3 class="text-lg font-medium text-zinc-200 mb-3">Download Resume</h3>
                        <p class="text-zinc-400 mb-4">
                            Get a detailed PDF version of my resume with complete work history and qualifications.
                        </p>
                        <a
                            href="/resume.pdf"
                            class="inline-block px-6 py-3 bg-zinc-700 hover:bg-zinc-600 text-zinc-100 rounded-lg transition-colors duration-200 font-medium"
                        >
                            Download PDF Resume
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</InfoLayout>