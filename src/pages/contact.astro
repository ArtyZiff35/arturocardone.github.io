---
import InfoLayout from '../layouts/InfoLayout.astro';
import Navigation from '../components/Navigation.tsx';
---

<InfoLayout title="Contact Arturo Cardone - Get In Touch" description="Contact Arturo Cardone for software engineering opportunities, technical collaborations, or discussions about AI/ML and distributed systems.">
    <div class="p-3 sm:p-4 sm:pt-8 sm:px-12 pb-12 sm:pb-20 min-h-dvh flex flex-col gap-8 sm:gap-16 max-w-6xl mx-auto w-full">
        <Navigation client:load />

        <div class="flex-1 flex flex-col justify-center">
            <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-gray-100 mb-6 sm:mb-8 md:mb-10">Get In Touch.</h1>

            <div class="grid md:grid-cols-2 gap-12">
                <!-- Contact Information -->
                <div class="space-y-8">
                    <div>
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200 mb-4 sm:mb-6">Contact Information</h2>

                        <div class="space-y-6">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-zinc-800 rounded-lg flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-300">
                                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-zinc-400 text-sm">Location</p>
                                    <p class="text-zinc-200">Chicago, IL</p>
                                </div>
                            </div>

                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-zinc-800 rounded-lg flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-300">
                                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                                        <rect width="4" height="12" x="2" y="9"></rect>
                                        <circle cx="4" cy="4" r="2"></circle>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-zinc-400 text-sm">LinkedIn</p>
                                    <a href="https://linkedin.com/in/arturo-cardone" class="text-zinc-200 hover:text-zinc-100 transition-colors">linkedin.com/in/arturo-cardone</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Call to Action -->
                    <div class="p-6 bg-zinc-900/50 rounded-lg border border-zinc-800">
                        <h3 class="text-xl font-medium text-zinc-200 mb-3">Let's Connect</h3>
                        <p class="text-zinc-400 text-sm mb-4">
                            I'm always interested in discussing new opportunities, whether it's about joining your team, collaborating on exciting projects, or just having a conversation about technology and innovation.
                        </p>
                        <p class="text-zinc-400 text-sm">
                            Feel free to connect with me. I'm always interested in discussing new opportunities and interesting projects.
                        </p>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="space-y-8">
                    <div>
                        <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-zinc-200 mb-4 sm:mb-6">Send Me a Message</h2>

                        <form
                            id="contactForm"
                            action="mailto:arturocardone55+personalwebsite@outlook.it"
                            method="POST"
                            enctype="text/plain"
                            class="space-y-6"
                        >
                            <div>
                                <label for="name" class="block text-sm font-medium text-zinc-300 mb-2">Name</label>
                                <input
                                    type="text"
                                    id="name"
                                    name="sender_name"
                                    required
                                    class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700 rounded-lg text-zinc-100 placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-zinc-600 focus:border-transparent transition-colors"
                                    placeholder="Your name"
                                />
                            </div>

                            <div>
                                <label for="subject" class="block text-sm font-medium text-zinc-300 mb-2">Subject</label>
                                <input
                                    type="text"
                                    id="subject"
                                    name="subject"
                                    class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700 rounded-lg text-zinc-100 placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-zinc-600 focus:border-transparent transition-colors"
                                    placeholder="What's this about?"
                                />
                            </div>

                            <div>
                                <label for="message" class="block text-sm font-medium text-zinc-300 mb-2">Message</label>
                                <textarea
                                    id="message"
                                    name="message_body"
                                    rows="6"
                                    required
                                    class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700 rounded-lg text-zinc-100 placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-zinc-600 focus:border-transparent transition-colors resize-none"
                                    placeholder="Your message here..."
                                ></textarea>
                            </div>

                            <button
                                type="submit"
                                class="w-full sm:w-auto px-8 py-3 bg-zinc-700 hover:bg-zinc-600 text-zinc-100 rounded-lg transition-colors duration-200 font-medium focus:outline-none focus:ring-2 focus:ring-zinc-600 focus:ring-offset-2 focus:ring-offset-zinc-900"
                            >
                                Send Message
                            </button>
                        </form>

                        <script>
                            document.getElementById('contactForm').addEventListener('submit', function(e) {
                                e.preventDefault();

                                const formData = new FormData(this);
                                const name = formData.get('sender_name');
                                const subject = formData.get('subject') || `Message from ${name}`;
                                const message = formData.get('message_body');

                                // Format the email body with name
                                const emailBody = `${message}\n\n- ${name}`;

                                // Create mailto URL with properly formatted body
                                const mailtoUrl = `mailto:arturocardone55+personalwebsite@outlook.it?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(emailBody)}`;

                                // Open the mailto URL
                                window.location.href = mailtoUrl;

                                // Reset the form
                                this.reset();
                            });
                        </script>
                    </div>
                </div>


            </div>

            <div class="mt-16 pt-8 border-t border-zinc-800">
                <div class="text-center">
                    <h2 class="text-2xl font-semibold text-zinc-200 mb-4">Check Out My Experience</h2>
                    <p class="text-zinc-400 mb-6">
                        Explore my professional journey and the projects I've worked on.
                    </p>
                    <a
                        href="/experience"
                        class="inline-block px-8 py-3 bg-zinc-700 hover:bg-zinc-600 text-zinc-100 rounded-lg transition-colors duration-200 font-medium"
                    >
                        View Experience
                    </a>
                </div>
            </div>
        </div>
        </div>
    </div>
</InfoLayout>